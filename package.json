{
  "name": "video.fm",
  "productName": "video.fm",
  "version": "0.5.0",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.fromis9.videofm",
    "productName": "video.fm",
    "copyright": "Copyright Â© 2025 fromis-9",
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icons/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icons/icon.ico",
      "extraResources": [
        {
          "from": "dist/videofm.exe",
          "to": "./extraResources/videofm.exe"
        },
        {
          "from": "./bundled-tools/ffmpeg.exe",
          "to": "./extraResources/bin/ffmpeg.exe"
        },
        {
          "from": "./bundled-tools/ffprobe.exe",
          "to": "./extraResources/bin/ffprobe.exe"
        },
        {
          "from": "./bundled-tools/yt-dlp.exe",
          "to": "./extraResources/bin/yt-dlp.exe"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "AudioVideo",
      "icon": "assets/icons/icon.png"
    },
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  },
  "keywords": [],
  "author": "fromis-9",
  "license": "MIT",
  "description": "",
  "devDependencies": {
    "electron": "^35.0.2",
    "electron-builder": "^25.1.8"
  }
}
